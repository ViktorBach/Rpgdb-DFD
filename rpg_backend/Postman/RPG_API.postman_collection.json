            }
          }
        },
        {
          "name": "JWT Refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/auth/jwt/refresh/",
