              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "jwt", "refresh", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"refresh\": \"{{refresh_token}}\"}"
            }
          }
        }
      ]
    },

