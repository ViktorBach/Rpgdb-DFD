          "name": "Login (Token Auth)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/auth/login/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "login", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"Thorin\", \"password\": \"oakenshield\"}"
            }
          }
        },
        {
          "name": "Logout (Token Auth)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/auth/logout/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
